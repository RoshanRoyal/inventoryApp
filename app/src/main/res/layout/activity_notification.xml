<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receive_good_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_portrait_background"
    tools:context="in.periculum.ims.NotificationActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="100">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="NOTIFICATIONS"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/text_box_background"
            android:padding="10dp">

        </TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No New Notifications Found."
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
